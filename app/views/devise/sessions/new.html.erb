

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <form class="emailform">
    <h1 class="text-center">Hi! We know you. Please sign in</h1>  
    <p class="text-center"> If we don't kwow eachother yet, make sure to sigh up! </p> 

    <div class="form-group text-center">
      <% f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'enter email', class:'form-control' %>
    </div>

    <div class="form-group text-center">
      <% f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: 'enter password', class:'form-control'%>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group text-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions text-center">
      <%= f.submit "Log in", class:"btn btn-primary"%>
    </div>
  </form>  

<% end %>

<div class="text-center">
  <%= render "devise/shared/links" %>
</div>  

