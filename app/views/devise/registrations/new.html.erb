<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="emailform text-center">
  <div class="row">
    <div class="col-md-12">
      <h1>Welcome, please create a username and password</h1>

      <div class="form-group">
        <% f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email" %>
      </div>      

      <div class="form-group">
        <% f.label :password %>
          <% if @minimum_password_length %>
          <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password 8 characters minimum" %>
      </div>

      <div class="form-group">
        <% f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Re-enter password" %>
      </div>  

        <div class="actions">
          <%= f.submit "Sign up", class:'btn btn-primary' %>
        </div>
<% end %>

<%= render "devise/shared/links" %>

